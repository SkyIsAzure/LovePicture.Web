@model LovePicture.Model.MoClass.MoRegisterUser

@{
    ViewData["Title"] = "账户设置 - 修改密码";
    var userInfo = ViewData["MyUserInfo"] as LovePicture.Model.MoClass.MoUserInfo;
    userInfo.Status = 2;
}
<div class="row">
    @await Html.PartialAsync("UserCenterGroup", userInfo)
    <div class="col-md-10">
        <h3><span class="glyphicon glyphicon-user" aria-hidden="true"></span> @ViewData["Title"]</h3>
        <hr />
        <form method="post" name="form_submit" action="/usercenter/modifypwd">
            <input type="hidden" name="UserName" value="@Model.UserName" />
            <div class="form-group">
                <label asp-for="UserPwd">新密码</label>
                <input asp-for="UserPwd" required="required" class="form-control" />
                <span asp-validation-for="UserPwd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComfirmPwd">确认密码</label>
                <input asp-for="ComfirmPwd" class="form-control" />
                <span asp-validation-for="ComfirmPwd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="button" value="保 存" name="btnSubmit" class="btn btn-default" /> <a href="/usercenter/AccountSettings" class="btn btn-default">返 回</a>
                <span id="msgbox" style="color:red">@ViewData["msgbox"]</span>
            </div>
        </form>
    </div>
</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>